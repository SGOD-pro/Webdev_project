<% include ./partials/header.ejs %>
    <link rel="stylesheet" href="/stylesheets/doctordashboard.css">
    <style>
        .rounded-4 {
            overflow: hidden;
        }

        .table-div {
            overflow: auto;
            height: 95vh !important;
        }
    </style>

    <body>
        <% include ./partials/toast.ejs %>

            <main class="flex gap-1">
                <% include ./partials/doctorsnavbar.ejs %>

                    <section class="scrollbar">
                        <div class="table-div w-full h-full scrollbar">
                            <% allPatients.forEach((element)=> {%>
                            <div class="mt-3">
                                <h1 class="text-md"><%=element._id  %></h1>
                                <div class="rounded-4">
                                    <table class="table table-striped table-hover table-dark rounded-3 m-0">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Time</th>
                                                <th scope="col">Issue</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% element.appointment.forEach((element,index)=> {%>
                                                <tr>
                                                    <th scope="row"><%=index+1  %></th>
                                                    <td><%=element.fullname  %></td>
                                                    <td><%=element.email  %></td>
                                                    <td><%=element.time  %></td>
                                                    <td><%=element.issue  %></td>
                                                    <td><%=element.status  %></td>
                                                </tr>
                                                <% }); %>
                                                    

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </section>


            </main>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/javascripts/doctorDashboard.js"></script>
            <% include ./partials/footer.ejs %>