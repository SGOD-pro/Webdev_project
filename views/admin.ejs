      <h2>Doctor Registration Form</h2>
      <form data-bs-theme="dark" id="add-doctors" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Full Name:</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Danie Daniels" required>
        </div>
        <div class="form-group">
          <label for="qualification">Qualification:</label>
          <select class="form-select" name="qualification" aria-label="Default select example" required>
            <option selected>Open this select menu</option>
            <option value="1">MD(Doctor of Mmedicine) in Psychiatry</option>
            <option value="2">DNB(Diplomate of National Board) in Psychiatry</option>
            <option value="3">MA(Master of Arts) or MSc (Master of Science) in Psychology</option>
            <option value="4">PhD(Doctor of Philosophy)</option>
          </select>
        </div>
        <div class="form-group">
          <label for="experience">Experience:</label>
          <input type="number" class="form-control" id="experience" name="experience" required>
        </div>
        <div class="form-group">
          <label for="speciality">Speciality:</label>
          <select class="form-select" aria-label="Default select example" name="speciality" required>
            <option selected>Open this select menu</option>
            <option value="1">Clinical Psychology</option>
            <option value="2">Counselling Psychology</option>
            <option value="3">Neuropsychology</option>
            <option value="4">Industrial- Organisational Psychology</option>
            <option value="5">Educational Psychology</option>
            <option value="6">Social Psychology</option>
            <option value="7">Child Psychology</option>
            <option value="8">Psychiatry</option>
            <option value="9">Psychotherapy</option>
            <option value="10">Neuropsychiatry</option>
            <option value="11">Eating Disorders</option>
            <option value="12">Psychoanalyst</option>
            <option value="13">Geriatric Psychiatry</option>
            <option value="14">Addiction Psychiatry</option>
            <option value="15">Educational Psychology</option>
          </select>
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="contactNo">Contact Number:</label>
          <input type="tel" class="form-control" id="contactNo" name="contactNo" pattern="[0-9]{10,}"
            placeholder="At least 10digits" required>
        </div>
        <div class="form-group">
          <label for="timing">Timing:(From-To)</label>
          <div class="from-group flex  gap-2">
            <input type="time" class="form-control" id="timing" name="from">
            <input type="time" class="form-control" id="timing" name="to" required>
          </div>
        </div>
        <div class="form-group">
          <label for="days">Days Available:</label>
          <% const days=["S","M","T","W","T","F","S"] %>
            <div class="flex gap-2 p-2 justify-between days-div" data-bs-theme="dark">
              <% for (let index=0; index < days.length; index++) {%>
                <div class="content">
                  <label class="checkBox relative flex items-center justify-center">
                    <input type="checkbox" id="<%=days[index]  %>" value="<%=days[index]  %>" name="days" />
                    <div class="transition"></div>
                    <label class="text" for="<%=days[index]  %>">
                      <%=days[index] %>
                    </label>
                  </label>
                </div>

                <%} %>

            </div>

        </div>
        <div class="form-group">
          <label for="clinicLocation">Clinic Location:</label>
          <input type="text" class="form-control" id="clinicLocation" name="clinicLocation" required>
        </div>
        <div class="form-group">
          <label for="charges">Charges:</label>
          <input type="number" class="form-control" id="charges" name="charges" required>
        </div>
        <div class="form-group">
          <label for="formFile" class="">Image</label>
          <input class="form-control" type="file" id="formFile" name="image">
        </div>

        <div class="flex flex-end items-end"><button type="submit" class="btn btn-primary w-full">Submit</button></div>
      </form>
    </div>

